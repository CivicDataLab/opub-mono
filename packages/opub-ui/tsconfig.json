{
  "extends": "tsconfig/react-library.json",
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "ESNext",
    "resolveJsonModule": true,
    "types": ["vitest/globals"],
    "jsx": "react-jsx",
    "sourceMap": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "baseUrl": "src/",
    "skipLibCheck": true,
    "rootDir": "."
  },
  "exclude": [
    "dist",
    "build",
    "node_modules",
    "./src/components/**/*.stories.tsx"
  ],
  "types": ["typePatches"]
}
